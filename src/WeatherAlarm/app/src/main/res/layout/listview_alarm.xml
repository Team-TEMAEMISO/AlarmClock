<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:weightSum="1"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="75dp">


    <TextView
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="TextView"
        android:textSize="36sp"
        app:layout_constraintRight_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/SunnyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:background="@android:color/holo_orange_dark"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/Timer"
        android:layout_marginLeft="13dp" />

    <TextView
        android:id="@+id/SunnyNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="36sp"
        tools:layout_conversion_absoluteHeight="42dp"
        tools:layout_conversion_absoluteWidth="40dp"
        tools:layout_conversion_absoluteX="197dp"
        tools:layout_conversion_absoluteY="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/SunnyView" />


    <ImageView
        android:id="@+id/CloudyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_conversion_absoluteWidth="48dp"
        tools:layout_conversion_absoluteX="149dp"
        tools:layout_conversion_absoluteY="48dp"
        app:layout_constraintTop_toBottomOf="@+id/SunnyView"
        android:layout_marginLeft="157dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="157dp" />

    <TextView
        android:id="@+id/CloudyNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:textSize="36sp"
        tools:layout_conversion_absoluteHeight="42dp"
        tools:layout_conversion_absoluteWidth="40dp"
        tools:layout_conversion_absoluteX="197dp"
        tools:layout_conversion_absoluteY="48dp"
        app:layout_constraintLeft_toRightOf="@+id/CloudyView"
        app:layout_constraintTop_toBottomOf="@+id/SunnyNumber" />


    <ImageView
        android:id="@+id/RainyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_conversion_absoluteWidth="48dp"
        tools:layout_conversion_absoluteX="149dp"
        tools:layout_conversion_absoluteY="96dp"
        app:layout_constraintTop_toBottomOf="@+id/CloudyView"
        android:layout_marginLeft="157dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="157dp" />

    <TextView
        android:id="@+id/RainyNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60"
        android:textSize="36sp"
        tools:layout_conversion_absoluteHeight="42dp"
        tools:layout_conversion_absoluteWidth="40dp"
        tools:layout_conversion_absoluteX="197dp"
        tools:layout_conversion_absoluteY="96dp"
        app:layout_constraintLeft_toRightOf="@+id/RainyView"
        app:layout_constraintTop_toBottomOf="@+id/CloudyNumber" />


    <ImageView
        android:id="@+id/SnowyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_conversion_absoluteWidth="48dp"
        tools:layout_conversion_absoluteX="149dp"
        tools:layout_conversion_absoluteY="144dp"
        app:layout_constraintTop_toBottomOf="@+id/RainyView"
        android:layout_marginLeft="157dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="157dp" />

    <TextView
        android:id="@+id/SnowyNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="90"
        android:textSize="36sp"
        tools:layout_conversion_absoluteHeight="42dp"
        tools:layout_conversion_absoluteWidth="40dp"
        tools:layout_conversion_absoluteX="197dp"
        tools:layout_conversion_absoluteY="144dp"
        app:layout_constraintLeft_toRightOf="@+id/SnowyView"
        app:layout_constraintTop_toBottomOf="@+id/RainyNumber" />


    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.503"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1" />

    <TextView
        android:id="@+id/Timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AM11:59"
        android:textSize="36sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.503"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginLeft="0dp" />
</android.support.constraint.ConstraintLayout>